<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background=""
    tools:context=".PlaneTemplate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginBottom="8dp"
        android:background="@color/GraygeLight"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/ibBackArrow"
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:contentDescription="Flecha hacia atras"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/backarrow" />

        <TextView
            android:id="@+id/tvTitlePlane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:fontFamily="@font/sans_font"
            android:text="@string/tvTitlePlane"
            android:textAlignment="center"
            android:textColor="@color/GrayBackground"
            android:textSize="34dp"
            android:layout_marginRight="40dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="187dp"
                android:backgroundTint="@color/Transparent"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/ivPlaneImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:maxHeight="120dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/uniempresarial" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ExtraLightGray"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvDurationSubtitle"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sans_font"
                            android:text="@string/tvDurationSubtitle"
                            android:paddingLeft="8dp"
                            android:textColor="@color/GrayBackground"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tvDurationPlane"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="1"
                            android:text="@string/tvDurationPlane"
                            android:paddingLeft="8dp"
                            android:textColor="@color/GrayBackground"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvShotSubtitle"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sans_font"
                            android:paddingLeft="8dp"
                            android:text="@string/tvShotSubtitle"
                            android:textColor="@color/GrayBackground"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tvShotPlane"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="1"
                            android:text="@string/tvShotPlane"
                            android:paddingLeft="8dp"
                            android:textColor="@color/GrayBackground"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvPlaneSubtitle"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sans_font"
                            android:text="@string/tvPlaneSubtitle"
                            android:paddingLeft="8dp"
                            android:textColor="@color/GrayBackground"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tvPlanePlane"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="1"
                            android:text="@string/tvPlanePlane"
                            android:paddingLeft="8dp"
                            android:textColor="@color/GrayBackground"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvMoveSubtitle"
                            android:layout_width="299dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sans_font"
                            android:text="@string/tvMoveSubtitle"
                            android:paddingLeft="8dp"
                            android:textColor="@color/GrayBackground"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tvMovePlane"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="1"
                            android:text="@string/tvMovePlane"
                            android:paddingLeft="8dp"
                            android:textColor="@color/GrayBackground"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ExtraLightGray"
            app:cardElevation="8dp"
            android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">


        <TextView
                android:id="@+id/tvArgumentSubtitle"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/sans_font"
                android:text="@string/tvArgumentSubtitle"
                android:paddingLeft="8dp"
                android:textColor="@color/GrayBackground"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvArgumentPlane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="@string/tvArgumentPlane"
                android:paddingLeft="8dp"
                android:textColor="@color/GrayBackground"
                android:textSize="20dp"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>