                    android:fontFamily="@font/sans_font"
                    android:text="@string/tvTitleDurationEsceneET"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvDurationEsceneET"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="@string/tvDurationEsceneET"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/GraygeLight"
        android:outlineAmbientShadowColor="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvTitleDescriptionEsceneET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans_font"
                android:paddingLeft="15dp"
