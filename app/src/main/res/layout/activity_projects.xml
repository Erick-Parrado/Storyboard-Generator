<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LightBackground"
    tools:context=".Projects">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginBottom="8dp"
        android:background="@color/GraygeLight"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/ibPinClose"
            android:layout_width="1dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:contentDescription="Flecha hacia atras"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/backarrow" />

        <TextView
            android:id="@+id/tvTitleProjectsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:fontFamily="@font/sans_font"
            android:text="@string/tvTitleMain"
            android:textAlignment="center"
            android:textColor="@color/GrayBackground"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/ibUser"
            android:layout_width="6dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:contentDescription="Imagen de perfil"
            android:scaleType="fitCenter"
            android:text="show popup"
            android:onClick="showPopup"
            app:srcCompat="@drawable/profile" />

        <ImageButton
            android:id="@+id/ibSettings"
            android:layout_width="6dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/settings" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvLista"
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:cacheColorHint="@color/white"></ListView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:backgroundTint="@color/GraygeLight"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_height="124dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibProject"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/Transparent"
                android:contentDescription="Imagen del proyecto"
                app:srcCompat="@drawable/imggallery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitleNameProject"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/sans_font"
                        android:text="@string/tvTitleNameProject"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStudioProjects"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tvStudioProjects"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tvEditeTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tvEditeTime"
                        android:textSize="20dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >

        <ImageButton
            android:id="@+id/ibAddProjects"
            android:layout_width="145dp"
            android:layout_height="63dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/Transparent"
            android:contentDescription="imgMore"
            android:onClick="addProject"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/add"
            android:layout_marginLeft="30dp" />

        <ImageButton
            android:id="@+id/ibUnirse"
            android:layout_width="149dp"
            android:layout_height="74dp"
            android:layout_centerInParent="true"
            android:background="@color/Transparent"
            android:contentDescription="Button Unirse"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/members"
            android:paddingBottom="10dp"/>
    </LinearLayout>


</LinearLayout>
