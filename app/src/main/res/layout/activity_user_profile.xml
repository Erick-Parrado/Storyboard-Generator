<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginBottom="8dp"
        android:background="@color/GraygeLight"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/ibPinClose"
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:contentDescription="Flecha hacia atras"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/backarrow" />

        <TextView
            android:id="@+id/tvTitleUserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:fontFamily="@font/sans_font"
            android:text="@string/tvTitleUserProfile"
            android:textAlignment="center"
            android:textColor="@color/GrayBackground"
            android:textSize="34dp"
            android:layout_marginRight="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="237dp"
            android:layout_height="218dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="159dp"
                android:layout_height="181dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.112"
                app:srcCompat="@drawable/profile" />

            <ImageButton
                android:id="@+id/ibAddPhotoUP"
                android:layout_width="74dp"
                android:layout_height="80dp"
                android:layout_marginStart="116dp"
                android:backgroundTint="@color/Transparent"
                android:contentDescription="boton para Agregar foto de perfil"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.884"
                app:srcCompat="@drawable/add" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvUserNameUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvUserNameUP"
            android:paddingLeft="10dp"
            android:textSize="30dp"
            android:fontFamily="@font/sans_font"
            android:textColor="@color/GrayBackground"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:backgroundTint="#F4F4F4"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleEmailUP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sans_font"
                android:text="@string/tvTitleEmailUP"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tvEmailUP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/tvEmailUP"
                android:textColor="@color/AppGray"
                android:textSize="23dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:backgroundTint="#F4F4F4"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitlePssForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sans_font"
                android:text="@string/tvTitlePssForm"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tvPssForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/tvPssForm"
                android:textColor="@color/AppGray"
                android:textSize="23dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnUserProfileEdit"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/GrayBackground"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="@string/btnUserProfileEdit" />

</LinearLayout>